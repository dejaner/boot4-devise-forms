= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
  .card.card-block.devise
    %h2.card-title.devise= t('devise_forms.sessions.new.title')

    .card-text.devise
      = devise_error_messages!

      .row.form-group
        %label.col-sm-4.form-control-label.text-sm-right.devise{for: 'inputEmail1'}= t('devise_forms.user.email')
        .col-sm-8
          = f.email_field :email, class: 'form-control form-control-sm',
                                  id: 'inputEmail1',
                                  placeholder: t('devise_forms.user.email_placeholder'),
                                  autofocus: true

      .row.form-group
        %label.col-sm-4.form-control-label.text-sm-right.devise{for: 'inputPassword1'}= t('devise_forms.user.password')
        .col-md-8
          = f.password_field :password, class: 'form-control form-control-sm',
                                        id: 'inputPassword1',
                                        placeholder: t('devise_forms.user.password_placeholder'),
                                        autocomplete: 'off'

      - if devise_mapping.rememberable?
        .row.form-group
          .col-sm-offset-4.col-sm-8
            .checkbox
              %label.form-control-label.devise.normal
                = f.check_box :remember_me
                = t('devise_forms.user.remember_me')

      .row.form-group
        .col-sm-offset-4.col-sm-8
          = f.submit t('devise_forms.sessions.new.button'), class: 'btn btn-success'
    .card-footer.text-sm-right.devise
      = render 'devise/shared/links'
